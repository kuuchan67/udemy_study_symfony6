{% extends 'base.html.twig' %}

{% block title %}全投稿{% endblock %}

{% block body %}
<div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
{% for post in posts %}
    <div class="mb-4">
        <div class="text-2xl">
        <a href="{{ path('app_micro_post_show_one', {id: post.id}) }}">{{ post.title }}</a>
        </div>
        <div class="text-xl dark:text-gray-400">
            {{ post.text }}
        </div>
        <div class="text-gray-500 dark:text-gray-400">
            {{ post.created | date("Y-m-d") }}
        </div>
        <div>
            <a href="#">
                Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">0</span>
            </a>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">
            <a href="#">example@example.com</a>
        </div>
        <div class="flex">
            <a href="{{ path('app_micro_post_edit', { post: post.id }) }}" class="mr-2">編集</a>
        </div>
    </div>
{% endfor %}
</div>
{% endblock %}
