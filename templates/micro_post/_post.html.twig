<div class="mb-4">
    <div class="text-2xl">
        <a href="{{ path('app_micro_post_show_one', {id: post.id}) }}">{{ post.title }}</a>
    </div>
    <div class="text-xl dark:text-gray-400">
        {{ post.text }}
    </div>
    <div class="text-gray-500 dark:text-gray-400">
        {{ post.created | date("Y-m-d") }}
    </div>

    <div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if post.likedBy.contains(app.user) %}
            <a href="{{path('app_unlike', {id: post.id}) }}">
                &#129505;
            </a>
            {% else %}
            <a href="{{path('app_like', {id: post.id}) }}">

                &#9829;
            </a>
            {% endif %}
        {% else %}
            &#9829;
        {% endif %}
       <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count }}</span>
    </div>

    <div class="text-sm text-gray-500 dark:text-gray-400">
        <a href="{{ path("app_profile", {id: post.author.id}) }}">{{post.author.email}}</a>
    </div>
    <div class="flex">
        <a href="{{ path('app_micro_post_edit', { post: post.id }) }}" class="mr-2">編集</a>
        <a href="{{ path('app_micro_post_comment', { post: post.id }) }}" class="mr-2">コメント</a><span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.comments.count }}</span>
    </div>
</div>